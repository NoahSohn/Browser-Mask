{
  "manifest_version": 2,
  "name": "Browser Mask",
  "version": "1.0",
  "description": "An extension for Firefox that swaps the user agent to allow sites to work best.",
  "icons": {
    "48": "icon.png"
  },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png"
    }
}
